@model Mission_Project.Models.Person
@{
    ViewData["Title"] = "Home Page";
    string resultText = ViewBag.Message;
}
<form asp-action="Index">

<div>Personal İnformations about Applying for Job</div>
<br/>
@using (Html.BeginForm())
    {
        @Html.LabelFor(m=> Model.Age)
        @Html.EditorFor(m=>Model.Age)
        <br/>

        if(Model.Technologies != null)
        {
             for (int i = 0; i < Model.Technologies.Count; i++)
            {

                @Html.CheckBoxFor(m => Model.Technologies[i].IsChecked)
                @Model.Technologies[i].Text
                @Html.HiddenFor(m => Model.Technologies[i].Text)
                <br/>
            }
        }
        <br/>

        @Html.LabelFor(m=> Model.IdentificationNumber)
        @Html.EditorFor(m=>Model.IdentificationNumber, new {htmlAttributes = new {min = 10000000146, max = 99999999990} })
        <br/>

        @Html.LabelFor(m=> Model.Experience)
        @Html.EditorFor(m=>Model.Experience)

        <div>
            <input type="submit" value="Save"/>
        </div>
        <div>@resultText</div>
    }
</form>